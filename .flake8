[flake8]
max-line-length = 120
extend-ignore = E203,W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .uv,
    .pytest_cache,
    .mypy_cache,
    math_ide.egg-info
per-file-ignores =
    # Игнорировать ошибки импорта для файлов с внешними зависимостями
    __init__.py:F401 